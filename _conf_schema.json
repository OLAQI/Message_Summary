{
  "message_count": {
    "description": "触发总结的消息条数",
    "type": "int",
    "default": 50
  },
  "summary_time": {
    "description": "总结信息发送时间",
    "type": "string",
    "default": "immediate",
    "options": ["immediate", "daily"]
  },
  "fixed_send_time": {
    "description": "每天固定发送时间（HH:MM）",
    "type": "string",
    "default": "23:59"
  },
  "trigger_command": {
    "description": "触发总结的命令词",
    "type": "string",
    "default": "/summary"
  }
}

