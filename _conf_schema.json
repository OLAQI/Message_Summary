{
  "message_count": {
    "description": "触发消息阈值",
    "type": "int",
    "default": 50,
    "min": 10,
    "max": 500
  },
  "summary_mode": {
    "description": "总结模式",
    "type": "string",
    "options": ["immediate", "daily"],
    "default": "immediate"
  },
  "fixed_send_time": {
    "description": "定时发送时间",
    "type": "string",
    "default": "23:59",
    "visible_if": {"summary_mode": "daily"}
  },
  "trigger_command": {
    "description": "触发命令",
    "type": "string", 
    "default": "/summary"
  },
  "summary_style": {
    "description": "总结风格",
    "type": "string",
    "options": ["简洁干练", "生动有趣", "专业严谨"],
    "default": "简洁干练"
  }
}
