{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "threshold": {
      "type": "integer",
      "minimum": 10,
      "maximum": 500,
      "default": 50,
      "title": "触发消息数"
    },
    "mode": {
      "type": "string",
      "enum": ["auto", "daily"],
      "default": "auto",
      "title": "工作模式"
    },
    "time": {
      "type": "string",
      "format": "time",
      "default": "23:30",
      "title": "定时时间",
      "options": {
        "visibleIf": {
          "mode": "daily"
        }
      }
    },
    "command": {
      "type": "string",
      "default": "/群总结",
      "title": "触发命令"
    },
    "style": {
      "type": "string",
      "enum": ["简洁", "幽默", "专业"],
      "default": "简洁",
      "title": "总结风格"
    }
  }
}
