{
    "message_count": {
        "description": "触发总结的消息条数",
        "type": "int",
        "hint": "当群聊中达到这个消息条数时触发总结",
        "default": 10
    },
    "summary_time": {
        "description": "总结信息发送时间",
        "type": "string",
        "hint": "立即或每天固定时间 (例如: 'immediate' 或 '23:00')",
        "default": "immediate"
    },
    "trigger_command": {
        "description": "触发总结的命令词",
        "type": "string",
        "hint": "监听到该命令词时自动触发发送总结",
        "default": "总结"
    }
}
