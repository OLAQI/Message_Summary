{
  "message_count": {
    "description": "触发总结的最小消息数",
    "type": "int",
    "default": 50,
    "hint": "达到此数量后自动触发总结"
  },
  "summary_mode": {
    "description": "总结模式",
    "type": "string",
    "options": ["immediate", "daily"],
    "default": "immediate",
    "hint": "immediate=立即总结 daily=每日定时"
  },
  "fixed_send_time": {
    "description": "每日发送时间",
    "type": "string",
    "default": "23:59",
    "hint": "格式: HH:MM（仅在每日模式下有效）",
    "visible_if": {
      "summary_mode": "daily"
    }
  },
  "trigger_command": {
    "description": "手动触发命令",
    "type": "string",
    "default": "/summary",
    "hint": "输入此命令立即生成总结"
  }
}
